{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "/structured_kanji/schemas/meaning.schema.json",
    "title": "Sense",
    "description": "A structured representation of a sense for a given japanese word's meaning.",
    "type": "object",
    "properties": {
        "sense": {
            "type": "string",
            "description": "A sense of the meaning"
        },
        "partOfSpeech": {
            "description": "The parts of speech of this word",
            "type": "array",
            "items": {
                "enum": [
                    "noun",
                    "suffix",
                    "prefix",
                    "particle",
                    "pronoun",
                    "numeric",
                    "interjection",
                    "copula",
                    "conjunction",
                    "adverb (fukushi)",
                    "expression",
                    "irregular verb",
                    "suru verb",
                    "suru special class",
                    "suru included",
                    "kuru special class",
                    "iku/yuku special class",
                    "godan verb",
                    "ichidan verb",
                    "yodan verb",
                    "nidan verb",
                    "い-adjective",
                    "な-adjective",
                    "たる-adjective",
                    "pre-noun adjectival (rentaishi)",
                    "counter",
                    "auxiliary",
                    "auxiliary verb",
                    "auxiliary adjective"
                ]
            },
            "minItems": 1
        },
        "transitivity": {
            "enum": [
                "transitive",
                "intransitive",
                "both"
            ]
        }
    },
    "required": [
        "partOfSpeech",
        "sense"
    ]
}