{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "/structured_kanji/schemas/meaning.schema.json",
    "title": "Meaning",
    "description": "A structured representation of a meaning of a japanese word and its senses for creating Anki flashcards.",
    "type": "object",
    "properties": {
        "readings": {
            "type": "array",
            "description": "The readings of the word using Anki's ruby syntax.",
            "items": {
                "$ref": "/structured_kanji/schemas/reading.schema.json"
            },
            "minItems": 1
        },
        "senses": {
            "type": "array",
            "description": "The senses of the reading.",
            "items": {
                "$ref": "/structured_kanji/schemas/sense.schema.json"
            },
            "minItems": 1
        },
        "dictEntryId": {
            "type": "string",
            "description": "The ID of this meaning of the dictionary it was extracted from."
        },
        "frequency": {
            "type": "array",
            "description": "The frequency of this word in the language it was extracted from.",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "source": {
                        "type": "string",
                        "description": "The source of the frequency data."
                    },
                    "frequency": {
                        "type": "number",
                        "description": "The frequency of the word in the source."
                    }
                },
                "required": [
                    "source",
                    "frequency"
                ]
            }
        }
    },
    "required": [
        "senses",
        "readings"
    ]
}